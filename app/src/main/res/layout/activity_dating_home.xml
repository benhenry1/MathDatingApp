<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/datingHomeLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:text="Date Count:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateCount"
            android:layout_weight="0.31"
            android:textSize="25sp" />

        <TextView
            android:text="Possible Dates:"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/totalDates"
            android:layout_weight="0.31"
            android:textSize="25sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.31">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/dateList" />
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Go Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainHomeButton"
            android:layout_weight="1" />

        <Button
            android:text="Go on a new date"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:id="@+id/newDate"
            android:layout_weight="0.03" />
    </LinearLayout>
</LinearLayout>
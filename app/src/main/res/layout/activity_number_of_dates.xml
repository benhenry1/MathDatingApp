<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to the Dating App"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many dates are you willing to go on to find your true love?(Default: 10) : "
            android:textAppearance="?android:attr/textAppearanceLarge" />
     </LinearLayout>
        <EditText
            android:id="@+id/numDatesDialogue"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:text="Find The One"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lovePageButton" />
    </LinearLayout>

</LinearLayout>